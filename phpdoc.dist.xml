<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor>
    <parser>
        <default-package-name>phpDocumentor</default-package-name>
        <target>/tmp/phpdoc-demo</target>
        <extensions>
            <extension>php</extension>
            <extension>php3</extension>
            <extension>phtml</extension>
        </extensions>
        <files>
            <directory>src</directory>
        </files>
    </parser>
    <transformer>
        <target>/tmp/phpdoc-demo/responsive</target>
    </transformer>
    <transformations>
        <template name="clean" />
    </transformations>
</phpdocumentor>
